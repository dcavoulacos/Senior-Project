<%= simple_form_for(@action, as: :new_action) do |f| %>
  <% if @action.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@action.errors.count, "error") %> prohibited this action from being saved:
      </h2>

      <ul>
      <% @action.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :action_type, collection: ["Move", "Pass"] %>

  <div>
    <%= f.input :end_position_x, value: :decimal, required: (f.object.action_type == "Move") %>
    <%= f.input :end_position_y, value: :decimal, required: (f.object.action_type == "Move") %>
  </div>

  <div>
    <%= f.input :teammate, collection: @action.action_frame.players.where(has_ball: false), 
    label_method: :role %>
  </div>

  <div id"submit_button"><%= f.submit %></div>
<% end %>